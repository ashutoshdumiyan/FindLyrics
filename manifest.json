{
  "manifest_version": 2,
  "name": "FindLyrics",
  "description": "Find lyrics to a song playing on YouTube.",
  "version": "1.0.0",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "tabs", "storage"]
}
